{
  "name": "app-icon",
  "version": "0.7.0",
  "description": "Automatic icon resizing for Mobile Apps. Supports Native, Cordova and React Native. Inspired by cordova-icon.",
  "main": "index.js",
  "bin": {
    "app-icon": "./bin/app-icon.js"
  },
  "scripts": {
    "start": "./bin/app-icon.js",
    "test": "mocha -t 10000 -name '*.specs.js' --recursive ./src",
    "test:debug": "mocha -d --debug-brk -w --inspect './src/**/*.specs.js'",
    "cov": "nyc --reporter text --reporter html --reporter lcov --report-dir './artifacts/coverage' --exclude '**/*.specs.js' mocha --timeout 10000 './src/**/*.specs.js'",
    "lint": "eslint .",
    "release": "standard-version",
    "preversion": "echo 'please use npm run release instead' && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwmkerr/app-icon.git"
  },
  "keywords": [
    "cordvoa",
    "react-native",
    "icon",
    "cordova-icon",
    "resize"
  ],
  "author": "Dave Kerr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dwmkerr/app-icon/issues"
  },
  "homepage": "https://github.com/dwmkerr/app-icon#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.13.0",
    "mocha": "^4.1.0",
    "nyc": "^11.9.0",
    "standard-version": "^4.4.0"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.15.1",
    "imagemagick-cli": "^0.3.0",
    "mkdirp": "^0.5.1"
  }
}
